<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <title>Кабинет массажа @ViewBag.Title</title>
    <!-- Подключаем Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body {
            padding-top: 50px;
            background-color: #f5f5f5;
        }
    </style>
</head>
<body>
    <div class="container">
        <nav class="navbar navbar-default navbar-fixed-top">
            <div class="container">
                <ul class="nav navbar-nav">
                    <li><a asp-controller="Home" asp-action="Index">Главная</a></li>
                    <li><a asp-controller="Massages" asp-action="Index">Наши услуги</a></li>
                    <li><a asp-controller="Bookings" asp-action="Index">Записаться</a></li>
                </ul>
            </div>
        </nav>
        <main role="main" class="pb-3">
            @RenderBody() <!-- Здесь рендерится содержимое конкретных страниц -->
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>