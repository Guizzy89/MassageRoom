@model IEnumerable<MassageRoom.Models.Booking>

@{
    Layout = "_Layout";
    ViewBag.Title = "Расписание";
}

<div class="row justify-content-center my-5">
    <h1 class="display-4">Список бронирований</h1>
</div>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Имя клиента</th>
                <th>Телефон</th>
                <th>Комментарий</th>
                <th>Время начала</th>
                <th>Время окончания</th>
                <th>Услуга</th>
                <th>Операции</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                    <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                    <td>@Html.DisplayFor(modelItem => item.Comment)</td>
                    <td>@Html.DisplayFor(modelItem => item.StartTime)</td>
                    <td>@Html.DisplayFor(modelItem => item.EndTime)</td>
                    <td>@Html.DisplayFor(modelItem => item.Service.Name)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Редактировать</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Удалить</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Кнопка добавления бронирования -->
<p>
    <a asp-action="Create" class="btn btn-success">Создать новое бронирование</a>
</p>