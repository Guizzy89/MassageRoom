@model IEnumerable<MassageRoom.Models.Service>

@{
    Layout = "_Layout";
    ViewBag.Title = "Наши услуги";
}

<div class="row justify-content-center my-5">
    <h1 class="display-4">Наши услуги</h1>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">Цена: @item.Price руб.</p>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Подробнее</a>
                </div>
            </div>
        </div>
    }
</div>

<!-- Кнопка добавления услуги -->
<p>
    <a asp-action="Create" class="btn btn-success">Добавить услугу</a>
</p>